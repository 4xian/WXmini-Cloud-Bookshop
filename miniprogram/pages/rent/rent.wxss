/* miniprogram/pages/rent/rent.wxss */

.rent-tip{
    width: 100%;
    height: 100px;
    font-size: 14px;
    border: 1px solid gray;
    border-radius: 10%;
    padding: 5px;
}
.tip-text{
    font-size: 12px;
    color: gray;
}
.rent-list{
    width: 100%;
    height: 30px;
    font-size: 14px;
    color: #6699CC;
    display: flex;
    justify-content: center;
    align-items: center;
    border-bottom: 1px solid #6699CC;
}

.list_box {
    height: 100px;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: 10rpx;
  }
  .list_content {
    height: 90px;
    width: calc(100% - 180rpx);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 10rpx;
    box-sizing: border-box;
  }
  .list_word {
    display: flex;
    flex-direction: column;
    width: 100%;
    box-sizing: border-box;
  }
  
  .list_title {
    width: 100%;
    font-size: 30rpx;
    letter-spacing: 3rpx;
    line-height: 45rpx;
  
  }
  
  .list_author {

    width: 100%;
    font-size: 27rpx;
    letter-spacing: 3rpx;
    line-height: 40rpx;
    color: rgb(129, 129, 129);
  }
  
  .list_between {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 10rpx;
  }
  
  .list_price {
    font-size: 36rpx;
    color: rgb(255, 0, 0);
  }
  .rent_price{
    margin-left: 20px;
    font-size: 30rpx;
  }
  
  .list_time {
    font-size: 28rpx;
    letter-spacing: 2rpx;
    color: rgb(129, 129, 129);
  }
  .list_poster {
    width: 180rpx;
    height: 180rpx;
  }

  .nocontent {
    width: 100%;
    height: calc(100% - 400rpx);
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
  }
  
  .nocontent image {
    padding-left: 80rpx;
    width: 340rpx;
    height: 272rpx;
  }
  
  .blank_text {
    padding-top: 40rpx;
    font-size: 32rpx;
    letter-spacing: 2rpx;
    color: #c6c6c8;
  }
  .tabbar {
    width: 100%;
    height: 96rpx;

    opacity: 1;
    position: fixed;
    left: 0rpx;
    bottom: 0rpx;
    display: flex;
    padding: 10rpx;
    border-top: 1rpx solid #eee;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    z-index: 8;
  }
  .buy_box {
    width: 40%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    z-index: 10;
  }
  .rentBuy{
    width: 90%;
    height: 70rpx;
    background: rgb(229, 238, 108);
    color: #000;
    letter-spacing: 4rpx;
    font-size: 28rpx;
    border-radius: 35rpx;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .goTop {
    height: 80rpx;
    width: 80rpx;
    position: fixed;
    bottom: 50rpx;
    right: 30rpx;
    border-radius: 50%;
    z-index: 99;
  }