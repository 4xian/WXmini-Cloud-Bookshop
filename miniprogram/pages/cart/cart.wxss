/* miniprogram/pages/cart/cart.wxss */
.myPage {
    width: 100%;
    height: 100%;
    z-index: 9000;
    background-color: gray;
    opacity: 0.5;
    position: fixed;
    overflow: hidden;
  
  }
.empty {
    width: 100%;
    height: 500px;
    background-color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    
}


.list_box {
    height: 80px;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
    margin-top: 10rpx;
    flex-direction: row;
}

.list_poster {
    width: 150rpx;
    height: 150rpx;
}

.list_content {
    height: 70px;
    width: calc(100% - 300rpx);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.list_word {
    display: flex;
    flex-direction: column;
    width: 100%;
    box-sizing: border-box;
}

.list_title {
    width: 100%;
    font-size: 30rpx;
    letter-spacing: 3rpx;
    line-height: 45rpx;

}

.list_author {

    width: 100%;
    font-size: 27rpx;
    letter-spacing: 3rpx;

    color: rgb(129, 129, 129);
}

.list_between {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: flex-end;
    border-bottom: 1rpx solid #eee;
    padding-bottom: 10rpx;
}

.list_price {
    font-size: 36rpx;
    color: rgb(255, 0, 0);
}

.list-other image {
    width: 25px;
    height: 25px;
    margin-left: 30rpx;
}

.allPrice {
    font-size: 36rpx;
    color: rgb(255, 0, 0);
    width: 200rpx;
}

.buy_box {
    width: calc(100% - 340rpx);
    height: 70rpx;

    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    z-index: 10;
}

.buy {
    width: 40%;
    height: 70rpx;
    background: #6699CC;
    color: #000;
    letter-spacing: 4rpx;
    font-size: 28rpx;
    border-radius: 35rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.bottom {
    height: 50px;
    width: 100%;
    display: flex;
    align-items: center;
    padding: 30rpx;
    box-sizing: border-box;
    margin-bottom: 10rpx;
    flex-direction: row;
    position: fixed;
    bottom: 0;
}



/* 下单购买 */

.showBuy {
    width: 70%;
    height: 55%;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 9999;
    justify-content: center;
    position: absolute;
    top: 20%;
    left: 15%;
    background-color: white;
    border-radius: 5%;
  
  }
  
  .showBuy-tip{
  color: gray;
  font-size: 32rpx;
  position: absolute;
  top: 10px;
  padding-left: 5px;
  }
  
  .showBuy-wx{
    font-size: 32rpx;
    display: flex;
    flex-direction: row;
    margin-top: 30px;
    padding-left: 5px;
  }
  .showBuy-wx text {
    width: 70px;
  }
  .showBuy-button{
    width: 60%;
    height: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    box-sizing: border-box;
    z-index: 10;
    position: absolute;
    bottom: 10px;
  }

  .b_placebox {
    width: 100%;
    height: 60rpx;
    padding: 0 20rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    background: rgb(238, 238, 238);
  }
  
  .b_placebox input {
    width: 100%;
    font-size: 24rpx;
  
    color: #8c9aa8;
  }

  .b_bar {
    height: 90rpx;
    width: 100%;
    box-sizing: border-box;
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20px;
  }
  .kind-group {
    display: flex;
  }
  
  .b_radio {
  
    font-size: 28rpx;
    display: flex;
    align-items: center;
  }
  
  .b_radio radio {
    transform: scale(0.8);
  }

  .b_name {
    font-size: 26rpx;
    letter-spacing: 2rpx;
    padding-left: 5px;
  }
  .b_bar input{
    background-color: #8c9aa8
  }